extends layout
block content
	.seccao.container.white
		form(id="formulario", method="POST", action="/ferramenta/editar/#{link}")
			fieldset.no-border.legend-border
				legend.selmecAzul.bold <span data-i18n="demo.menu.viatura"></span>
				.row
					.col.s12.m6.input-field
						label(for="matricula") <span data-i18n="demo.utilizador_form.matricula"></span>
						input( type="text",autocomplete="off",  id="matricula", name="matricula",  value="#{Oficina? Oficina[0].matricula : ''}")
					.col.s12.m6.input-field
						label(for="marca") <span data-i18n="demo.utilizador_form.marca"></span>
						input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="marca" ,name="marca", value="#{Oficina? Oficina[0].marca : ''}")
					if !Oficina || show
						.col.s12.m6.input-field
							label(for="modelo") <span data-i18n="demo.utilizador_form.modelo"></span>
							input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="modelo" ,name="modelo", value="#{Oficina? Oficina[0].modelo : ''}")
					.col.s12.m6.input-field
						label(for="ano_aquisicao") <span data-i18n="demo.utilizador_form.ano"></span>
						input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="ano_aquisicao" ,name="ano_aquisicao", value="#{Oficina? Oficina[0].ano_aquisicao : ''}")
					.col.s12.m6.input-field
						label(for="kilometragem") <span data-i18n="demo.utilizador_form.kilometros"></span>
						input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="kilometragem" ,name="kilometragem", value="#{Oficina? Oficina[0].kilometragem : ''}")
					.col.s12.m6.hide
						label(for="local") Local
						select.browser-default.browser-default(id="local", name="local", style="font-family:")
							if Oficina
								if Oficina[0].local == "Oficina"
									option(value="Oficina") Oficina
								else
									if Oficina[0].local == "Parque"
										option(value="Parque") Parque

									else
										option(value="nao definido") NÃ£o definido
							else 
								option(value="Oficina") Oficina
								option(value="Parque") Parque
					.col.s12.m6
							label(for="regiao") <span data-i18n="demo.utilizador_form.regiao"></span>
							select.browser-default(name="regiao", id="regiao", style="font-family:")
								option(value="sul" selected= "#{Oficina[0].regiao}"=="sul"? true:false) Sul
								option(value="centro" selected="#{Oficina[0].regiao}"=="centro"? true:false) Centro
								option(value="norte" selected="#{Oficina[0].regiao}"=="sul"? true:false)  Norte
								option(value="maputo" selected="#{Oficina[0].regiao}"=="maputo"? true:false) Maputo
				.row
					//- .input-field.col.s12.m6
