extends layout
block content
	.seccao.container.white
		form(id="formulario", method="POST") 
			fieldset.no-border.legend-border
				legend.selmecAzul.bold Registo do Armazem
				.row
					.col.s12.m6.input-field
						label(for="nome") Nome do Armazem
						input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="nome" ,name="nome", readonly, value="#{Armazem[0].nome}")
					.col.s12.m6
						label(for="provincia") <span data-i18n="demo.utilizador_form.provincia"></span>
						input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="nome" ,name="nome", readonly, value="#{Armazem[0].provincia}")
				.row
					.col.s12.m6
							label(for="regiao") <span data-i18n="demo.utilizador_form.regiao"></span>
							input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="nome" ,name="nome", readonly, value="#{Armazem[0].regiao}")
					.col.s12.m6.input-field
						label(for="endereco") Endereco
						input.preencher(autocomplete="off", type="text",  style="font-family:;color:#12375c" ,id="endereco" ,name="endereco", value="#{Armazem? Armazem[0].endereco : ''}")
			fieldset.no-border.legend-border
				legend.selmecAzul.bold Responsaveis
				.row
					.col.s12
						table.responsive-table.bordered.striped
							thead
								tr.selmecAzul
									th Nomes
									th
							tbody(id="myTable_responsaveis" style="height:auto !important")
								-for(let i=0; i<Armazem[0].responsavel.length; i++)
									tr
										td #{Armazem[0].responsavel[i]}
			fieldset.no-border.legend-border
				legend.selmecAzul.bold Tecnicos alocados
				.row
					.col.s12
						table.responsive-table.bordered.striped
							thead
								tr.selmecAzul
									th Nomes
									th
							tbody(id="myTable_responsaveis" style="height:auto !important")
								-for(let i=0; i<Armazem[0].pessoas_permitidas.length; i++)
									tr
										td #{Armazem[0].pessoas_permitidas[i]}
			fieldset.no-border
				.row.buttons-container
					if !Armazem
						.col.s12.m6.left-button
							button(type="button", class="btn", id="registar_armazem") <span data-i18n="demo.utilizador_form.gravar"></span>
						.col.s12.m6.right-button
							button(type="button", class="btn red", id="cancelar_armazem") <span data-i18n="demo.utilizador_form.cancelar"></span>
					else
						.col.s12.center
							button#cancelar_Po(type="button", class="btn waves-efect waves-light activarAzul") << Back
