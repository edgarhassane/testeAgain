extends layout
block content
	.container.white(style="font-family:; ")
		form(id="inspeccao", method="post", style="color:#12375c")
			fieldset.no-border.legend-border
				legend.selmecAzul.bold  Formulário Inspecção de Pre-utilização
				.row
					.input-field.col.s12.m4
						if Ferramenta
							label(for="utilizador") Utilizador<span class="red-text">*</span>
							input(id="utilizador", readonly,style="font-family:; ", type="text", name="utilizador", value="#{Ferramenta[0].utilizador}")
						else
							label(for="utilizador") Utilizador<span class="red-text">*</span>
							input(id="utilizador", readonly ,style="font-family:; ", type="text", name="utilizador", value="#{dadosUser.nome}")
					.col.s12.m4
						label(for="nome") Nome da Ferramenta
						select.browser-default.preencher(name="nome", id="nome",style="font-family:")
							if Ferramenta
								-for(var i = 0; i < Nome_ferramentas.length; i++)
									if Ferramenta[0].nome == Nome_ferramentas[i]
										option(value="#{Nome_ferramentas[i]}", selected="selected") #{Nome_ferramentas[i]}
									else
										option(value="#{Nome_ferramentas[i]}") #{Nome_ferramentas[i]}
							else
								option(value="" disabled selected) Escolha nome da ferramenta
								-for(var i = 0; i < Nome_ferramentas.length; i++)
									option(value="#{Nome_ferramentas[i]}") #{Nome_ferramentas[i]}
					.col.s12.m4.center.imagem
						if Ferramenta
							img#imagem(src="/img/Facilities/#{Ferramenta[0].nome}.jpg", Style="width:100px; margin-top:2px")
						else
							img#imagem(src="/img/1.jpg", Style="width:100px; margin-top:2px")
				.row
					.col.s12.m4
							label(for="_estado_geral") Estado geral<span class="red-text">*</span>
							select.browser-default(name="_estado_geral", id="_estado_geral", style="font-family:")
								if Ferramenta
									if Ferramenta[0].estado_geral == 'bom'
										option(value="bom", selected="selected") Bom Estado
									else
										if Ferramenta[0].estado_geral == 'defeituoso' 
											option(value="defeituoso", selected="selected") Defeituoso
										else
											if Ferramenta[0].estado_geral == 'moderado'
												option(value="moderado", selected="selected", style="color:red !important;") Moderado
											else
												option(value="nao definido", selected="selected") Não definido
								else
									option(value="" disabled selected selmecVerde) Escolha a Opcao
									option(value="bom") Bom Estado
									option(value="moderado") Moderado
									option(value="defeituoso") Defeituoso
					.col.s12.m4
							label(for="cabos_mangueira") Cabos ou Mangueiras
							select.browser-default(name="cabos_mangueira", id="cabos_mangueira", style="font-family:")
