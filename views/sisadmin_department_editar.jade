extends layout
block content
	.seccao.container.white
		form(id="formulario", method="POST")
			fieldset.no-border.legend-border
				legend.selmecAzul.bold <span data-i18n="demo.utilizador_form.dados_basicos"></span>
				.row
					.col.s12.m6.input-field
						label(for="nome") <span data-i18n="demo.utilizador_form.departamento"></span>
						input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="nome" ,name="nome",idioty="#{Depp._id}", value="#{Depp? Depp.nome : ''}")
					.col.s12.m6
						label(for="chefe_depart") Chefe do departamento
						input.preencher( autocomplete="off", type="text", style="font-family:;color:#12375c" ,id="chefe_depart" ,name="chefe_depart", value="#{Depp? Depp.chefe_depart : ''}")
				.row
					.col.s12.m6.input-field
						label(for="limite_po") Valor Limite da PO
						input(type="number",  id="limite_po", name="limite_po", autocomplete="off",value="#{Depp? Depp.limite_po : ''}")
					.col.s12.m6.input-field
						label(for="limite_mensals") Valor Limite Mensal
						input(type="number",  id="limite_mensals", name="limite_mensals", autocomplete="off",value="#{Depp? Depp.limite_mensal : ''}")

			fieldset.no-border
				.row.buttons-container
					if !Usuarios
						.col.s12.m6.left-button
							button(type="button", class="btn", id="editxltar_sisadm_department") <span data-i18n="demo.utilizador_form.gravar"></span>

						.col.s12.m6.right-button
							button(type="button", class="btn red", id="voltar_util") <span data-i18n="demo.utilizador_form.cancelar"></span>
	block js
		script(type="text/javascript" src="/js/jquery.mask.js")
		script.
			
			setTimeout(function(){document.getElementById("adminsession").className="activarAzul"}, 100);
			setTimeout(function(){
			if(window.innerWidth<780){
			document.getElementById("mySidebar").style.width = "0";
			document.getElementById("main").style.marginLeft= "0";
			document.getElementById("main").style.width="100%";
			document.getElementById("main").style.marginBottom="0";
			document.getElementByClassName("capitalize").style.class="pequeno";
			}
			}, 50);



