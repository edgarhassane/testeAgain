extends layout
block content
	-if(DataU.nivel_acesso=="admin")
		.fixed-action-btn.top.fixed-add-bottom
					a.btn-floating.pointer.activarAzul(data-position="left", data-delay="10", data-tooltip="Add new inspection ", class="btn-floating btn-large waves-effect waves-light grey", href="/armazem/central") <i class="material-icons activarVerde">home</i>
	.container(style="padding-top:100px")
		.col.m4.s6
			.card.hover-reveal.personalised#stock_request_home
				.card-image.waves-block
					img(src="/img/request1.png" style="width:100px" )
				.card-content
					h6.bold Stock Request
		.col.m4.s6
			.card.hover-reveal.personalised#my_stock_home
				.card-image.waves-block
					img(src="/img/stock.png" style="width:100px" data-activates='dropdown2')
				.card-content
					h6.bold My Stock
		.col.m4.s6
			.card.hover-reveal.personalised#stock_history_home
				.card-image.waves-block
					img(src="/img/history.png" style="width:100px" data-activates='dropdown2')
				.card-content
					h6.bold Stock History

		block js
			script(type="text/javascript" src="/js/jquery.mask.js")
			script.
				setInterval(function(){document.getElementById("StockId").className="activarAzul"}, 50);
				setTimeout(function(){
				if(window.innerWidth<780){
				document.getElementById("mySidebar").style.width = "0";
				document.getElementById("main").style.marginLeft= "0";
				document.getElementById("main").style.width="100%";
				document.getElementById("main").style.marginBottom="0";
				document.getElementByClassName("capitalize").style.class="pequeno";
				}
				}, 50);