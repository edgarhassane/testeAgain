extends layout
block content
	.container.seccao.white
		if !MeuStock || !MeuStock.length
			p.center-align.selmecAzul.bold Vazio!
		else
			.row
				.col.s12.m6
				.col.s12.m6.right.input-field
					i.material-icons.prefix search
					label(for="pesquisador") <span data-i18n="demo.pesquisar"></span>
					input(type="text", id="pesquisador", name="pesquisador", style="border-bottom:none !important;")
			h1.center-align.selmecAzul.bold(style="font-size: 1.5em") Meu Stock
			fieldset.no-border.legend-border
						legend.selmecAzul.bold
			table.responsive-table.bordered.striped
				thead
					tr.selmecAzul
						th Item
						th Disponibilidade
						th Stock Owner
						th
				tbody(id="myTable")
					-for(var index = (MeuStock[0].disponibilidade.length-1), j=0; index>=0 && j<100 ; index--, j++)
						tr.highlight(data-funcionario="#{MeuStock[0].disponibilidade[index]._id}", data-nome="#{MeuStock[0].disponibilidade[index].nome}",style="color:#{MeuStock[0].disponibilidade[index].observacao}")
							td #{MeuStock[0].disponibilidade[index].description_item}
							td #{MeuStock[0].disponibilidade[index].disponivel}
							td #{MeuStock[0].disponibilidade[index].cliente_name}
							td
								

	block js
		script.
			setInterval(function(){document.getElementById("StockId").className="activarAzul"}, 50);
			setTimeout(function(){
			if(window.innerWidth<780){
			document.getElementById("mySidebar").style.width = "0";
			document.getElementById("main").style.marginLeft= "0";
			document.getElementById("main").style.width="100%";
			document.getElementById("main").style.marginBottom="auto";}
			}, 50);