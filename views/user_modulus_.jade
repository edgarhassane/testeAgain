extends layout

block content
	.seccao.container.white
		div(class="fixed-action-btn horizontal fixed-add-bottom")
			if (DataU.nivel_acesso =="admin")
				a.verde-policial-bg.activarAzul(data-position="left", data-delay="10", data-tooltip="add new user", class="btn-floating btn-large waves-effect waves-light", href="/utilizador/addmodulule/#{refr._id}") <i class=" activarAzul material-icons">add</i>
		if !(Entregas && Entregas.length>0)
			p.center-align.selmecAzul.bold <span data-i18n="demo.utilizador_home.lista_vazia"></span>
		else
			.row
				.col.s6.m6.right.input-field
					i.material-icons.prefix.activarVerde search
					label(for="pesquisadoruser") <span data-i18n="demo.pesquisar"></span>
					input(type="text", id="pesquisadoruser", name="pesquisadoruser", style="border-bottom:none !important;")

			h1.center-align.selmecAzul.bold(style="font-size: 1.5em") Acesso de #{refr.nome}
			fieldset.no-border.legend-border
				legend.selmecAzul.bold
			table.responsive-table.bordered.striped
				thead
					tr.selmecAzul
						th <span data-i18n="demo.utilizador_home.nome"></span> 
						th Adicionado por
						th Data
						th
				tbody(id="myTableUser")
					-for(var index = 0; index < Entregas.length; index++)
						if(!Entregas[index].status || Entregas[index].status!="anactivo")
							tr.highlight(data-caso="#{Entregas[index].__id}", data-nome="#{Entregas[index].nome}",style="font-family:;color:#12375c")
								td #{Entregas[index].nome}
								td #{Entregas[index].registed_by}
								td #{Entregas[index].datta}
								td
									a.pointer.info(style="margin-left: 15px; color:red", data-position="top", data-delay="10",  href="/utilizador/removerm0dulo/#{refr._id}/#{Entregas[index].__id}") <i class="material-icons ">delete</i>
		block js
		script.
			setInterval(function(){document.getElementById("adminsession").className="activarAzul"}, 50);
			setTimeout(function(){
			if(window.innerWidth<780){
			document.getElementById("mySidebar").style.width = "0";
			document.getElementById("main").style.marginLeft= "0";
			document.getElementById("main").style.width="100%";
			document.getElementById("main").style.marginBottom="0";
			document.getElementByClassName("capitalize").style.class="pequeno";
			}
			}, 50);